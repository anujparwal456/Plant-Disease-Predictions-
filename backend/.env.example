# Flask environment
FLASK_ENV=development
# Set to 'production' for deployed apps

# Backend configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=5000

# Database (leave blank for SQLite)
DATABASE_URL=

# Optional: AWS S3 for image storage
S3_BUCKET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Optional: SendGrid for email notifications
SENDGRID_API_KEY=

# Model path (default is in dataset folder)
# MODEL_PATH=/path/to/custom/model.h5
